# =============================================================================
# LISTINGCRAFT ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
# Generate a strong SECRET_KEY with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-minimum-50-characters-random-string

# Debug mode - MUST be False in production
DEBUG=True

# Allowed hosts - comma-separated list of domains
ALLOWED_HOSTS=localhost,127.0.0.1

# Django settings module
DJANGO_SETTINGS_MODULE=config.settings.dev

# CSRF trusted origins (production)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL for Production)
# -----------------------------------------------------------------------------
# Development uses SQLite by default, production requires PostgreSQL
DB_NAME=listingcraft
DB_USER=listingcraft
DB_PASSWORD=your-strong-database-password-here
DB_HOST=localhost
DB_PORT=5432

# -----------------------------------------------------------------------------
# Cache Configuration (Redis)
# -----------------------------------------------------------------------------
REDIS_URL=redis://127.0.0.1:6379/1

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
DEFAULT_FROM_EMAIL=noreply@listingcraft.online
SERVER_EMAIL=server@listingcraft.online

# Resend API for production email delivery
# Get your API key from https://resend.com
RESEND_API_KEY=re_your_api_key_here

# Email backend for development (console or SMTP)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# -----------------------------------------------------------------------------
# DeepSeek AI API Configuration
# -----------------------------------------------------------------------------
# Get your API key from https://deepseek.com
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_MODEL=deepseek-chat

# -----------------------------------------------------------------------------
# Stripe Payment Configuration
# -----------------------------------------------------------------------------
# Test Mode (for development)
STRIPE_TEST_PUBLIC_KEY=pk_test_your_key_here
STRIPE_TEST_SECRET_KEY=sk_test_your_key_here

# Live Mode (for production only)
STRIPE_LIVE_PUBLIC_KEY=pk_live_your_key_here
STRIPE_LIVE_SECRET_KEY=sk_live_your_key_here

# Set to True in production
STRIPE_LIVE_MODE=False

# Webhook secret from Stripe Dashboard
DJSTRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# -----------------------------------------------------------------------------
# Security Settings (Production)
# -----------------------------------------------------------------------------
# Force HTTPS redirect
SECURE_SSL_REDIRECT=False

# HSTS settings (production)
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Session security
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# -----------------------------------------------------------------------------
# Rate Limiting Configuration
# -----------------------------------------------------------------------------
# Global rate limit (requests per period)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# API-specific rate limit for AI endpoints
API_RATE_LIMIT_REQUESTS=10
API_RATE_LIMIT_PERIOD=60

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Site name and domain
SITE_NAME=ListingCraft
SITE_DOMAIN=listingcraft.online

# Support email
SUPPORT_EMAIL=support@listingcraft.online

# -----------------------------------------------------------------------------
# Celery Configuration (Optional - for background tasks)
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# -----------------------------------------------------------------------------
# Monitoring & Analytics (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn-here

# Google Analytics ID
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# -----------------------------------------------------------------------------
# File Upload Settings
# -----------------------------------------------------------------------------
# Maximum upload size in MB
MAX_UPLOAD_SIZE=10

# -----------------------------------------------------------------------------
# Development Tools (Development only)
# -----------------------------------------------------------------------------
# Django Debug Toolbar
DJANGO_DEBUG_TOOLBAR=False
