# =============================================================================
# LISTINGCRAFT PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# This is a template for production deployment
# Copy to .env in production and fill in actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings (PRODUCTION)
# -----------------------------------------------------------------------------
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-50-CHARACTER-RANDOM-STRING
DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings.prod
ALLOWED_HOSTS=listingcraft.online,www.listingcraft.online
CSRF_TRUSTED_ORIGINS=https://listingcraft.online,https://www.listingcraft.online

# -----------------------------------------------------------------------------
# Database (PostgreSQL - Required for Production)
# -----------------------------------------------------------------------------
DB_NAME=listingcraft
DB_USER=listingcraft
DB_PASSWORD=CHANGE-THIS-TO-STRONG-DB-PASSWORD
DB_HOST=postgres
DB_PORT=5432

# -----------------------------------------------------------------------------
# Cache (Redis - Required for Production)
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/1

# -----------------------------------------------------------------------------
# Email (Resend - Required for Production)
# -----------------------------------------------------------------------------
DEFAULT_FROM_EMAIL=noreply@listingcraft.online
SERVER_EMAIL=server@listingcraft.online
RESEND_API_KEY=re_CHANGE_THIS_TO_YOUR_RESEND_API_KEY
EMAIL_BACKEND=anymail.backends.resend.EmailBackend

# -----------------------------------------------------------------------------
# DeepSeek AI API (Required)
# -----------------------------------------------------------------------------
DEEPSEEK_API_KEY=CHANGE_THIS_TO_YOUR_DEEPSEEK_API_KEY
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_MODEL=deepseek-chat

# -----------------------------------------------------------------------------
# Stripe Payment (LIVE MODE - Production)
# -----------------------------------------------------------------------------
STRIPE_LIVE_MODE=True
STRIPE_LIVE_PUBLIC_KEY=pk_live_CHANGE_THIS
STRIPE_LIVE_SECRET_KEY=sk_live_CHANGE_THIS
DJSTRIPE_WEBHOOK_SECRET=whsec_CHANGE_THIS

# Test keys (keep for testing in production)
STRIPE_TEST_PUBLIC_KEY=pk_test_CHANGE_THIS
STRIPE_TEST_SECRET_KEY=sk_test_CHANGE_THIS

# -----------------------------------------------------------------------------
# Security Settings (PRODUCTION - REQUIRED)
# -----------------------------------------------------------------------------
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
API_RATE_LIMIT_REQUESTS=10
API_RATE_LIMIT_PERIOD=60

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=WARNING

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
SITE_NAME=ListingCraft
SITE_DOMAIN=listingcraft.online
SUPPORT_EMAIL=support@listingcraft.online

# -----------------------------------------------------------------------------
# Celery (Optional)
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Monitoring (Optional but Recommended)
# -----------------------------------------------------------------------------
# SENTRY_DSN=https://your-sentry-dsn-here
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# -----------------------------------------------------------------------------
# File Uploads
# -----------------------------------------------------------------------------
MAX_UPLOAD_SIZE=10
